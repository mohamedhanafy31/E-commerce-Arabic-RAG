# Simple Arabic RAG System - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8002

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Embedding model (Arabic BERT)
EMBEDDING_MODEL=NAMAA-Space/AraModernBert-Base-V1.0

# Generation model choice: "gemini" only
GENERATION_MODEL=gemini

# =============================================================================
# GPU CONFIGURATION
# =============================================================================
# Force GPU usage (mandatory as per user rules)
FORCE_GPU=true
GPU_DEVICE=cuda

# =============================================================================
# GEMINI CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
VECTOR_STORE_PATH=./data/vector_store
DOCUMENTS_PATH=./data/documents
TEMP_PATH=./temp

# =============================================================================
# CHUNKING CONFIGURATION
# =============================================================================
SENTENCES_PER_CHUNK=7
SENTENCE_OVERLAP=5

# =============================================================================
# RETRIEVAL CONFIGURATION
# =============================================================================
MAX_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# GENERATION CONFIGURATION
# =============================================================================
MAX_TOKENS=1024
TEMPERATURE=0.3

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
MAX_FILE_SIZE_MB=10
