# Environment Configuration for E-commerce Arabic RAG System
# Copy this file to .env and fill in your actual values

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Configuration (for ASR and TTS)
# Make sure you have valid tts-key.json files in ASR_API/ and TTS_API/ directories

# Optional: Enable CUDA support for RAG system
ENABLE_CUDA=false

# Optional: Custom ports (defaults are used if not specified)
# RAG_PORT=8002
# ASR_PORT=8001
# TTS_PORT=8003
# ORCHESTRATOR_PORT=8004

# Optional: Logging level
LOG_LEVEL=INFO

# Optional: Debug mode
DEBUG=false
